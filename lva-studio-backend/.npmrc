# Disable SWC to prevent native binding issues on Render
swc_core_binary_host_mirror=https://github.com/swc-project/swc/releases/download/
# Use npm instead of swc for better compatibility
build-from-source=true
# Increase memory limit
maxsockets=50
# Disable SWC completely
swc_core_binary_host_mirror=
# Force npm to use legacy peer deps
legacy-peer-deps=true
# Set registry
registry=https://registry.npmjs.org/ 